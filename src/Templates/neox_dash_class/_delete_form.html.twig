<form method="post" action="{{ path('app_neox_dash_class_delete', {'id': class.id}) }}"
    {{ stimulus_controller('@xorgxx/neox-dashboard-bundle/neox-modal',{
        title: "Delete " ~ class.name,
        Text: "All domain inside will also be delete! Do you want to continue?",
        idElement: path('app_neox_dashboard'),
        url: path('app_neox_dash_class_delete', { id: class.id })
    })}}
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ class.id) }}">

    <a
        {{ stimulus_action('@xorgxx/neox-dashboard-bundle/neox-modal', 'deleteConfirm', 'click') }}
