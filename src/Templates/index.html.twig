

<turbo-frame id="NeoxDashControl" >
    <style >
        .row {
            display: flex;
            flex-wrap: wrap;
        }
        .loader {
            display: none; /* Masqué par défaut */
            position: fixed; /* Fixe au centre de l'écran */
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%); /* Centre l'image */
            z-index: 99999; /* Assurez-vous qu'il est au-dessus des autres éléments */
            width: 50px; /* Ajustez la taille selon votre GIF */
            height: 50px; /* Ajustez la taille selon votre GIF */
        }

        .no-select {
            -webkit-user-select: none; /* Safari et Chrome */
            -moz-user-select: none;    /* Firefox */
            -ms-user-select: none;     /* Internet Explorer/Edge */
            user-select: none;         /* Standard */
        }

        /* Appliquer à tout le body lors du chargement */
        .body-loading {
            opacity: 0.5; /* Facultatif : Opacité pour indiquer le chargement */
            pointer-events: none; /* Désactive tous les événements de la souris */
        }

        .domain {
            border: 2px dashed transparent !important; /* Couleur de la bordure invisible */
            cursor: grab; /* Curseur de glissement */
        }

        .drag-hover {
            background-color: #e1ee76 !important; /* Couleur verte */
        }

        .domain:hover {
            border: 5px dashed #007bff !important; /* Bordure visible lors du survol */
            background-color: rgba(0, 123, 255, 0.1) !important; /* Couleur de fond lors du survol */
        }

        .domain.dragging {
            opacity: 0.5; /* Visual feedback when dragging */
        }

        .dropzone {
            border: 2px dashed #ccc;
            padding: 5px;
            transition: background-color 0.3s ease;
        }

        .dropzone-hover-false {
            background-color: #d34532; /* Couleur de survol */
            border: 2px dashed #a38a23;
        }

        .dropzone-hover {
            background-color: #23ff00; /* Couleur de survol */
            border: 2px dashed #0b4903;
        }

        .dropzone-valid {
            background-color: #d4edda; /* Vert clair pour une URL valide */
            border-color: #28a745;
        }

        .dropzone-invalid {
            background-color: #f8d7da; /* Rouge clair pour une URL invalide */
            border-color: #dc3545;
        }
    </style >
    <div id="loader" class="loader" >
        <img src="{{ asset('images/Infinity.gif') }}" alt="Loading..." >
    </div >
    <twig:NeoxDashBoard :NeoxDashSetup="NeoxDashSetup" id="live-NeoxDashBoard"/>
</turbo-frame>


